{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop"             : true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "lib": [
            "esnext.asynciterable",
            "dom",
            "es2015"
          ],
        "resolveJsonModule": true,
    },
    "files": [
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "app/**/*.ts",
        "app/**/*.js",
        "app/**/*.graphql",
    ],
    "exclude": [
        "node_modules"
    ]
}